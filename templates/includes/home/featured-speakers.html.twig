<section class="bg-blue-400 p-10">
    <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-display text-white uppercase">Featured Speakers</h2>

        <div class="grid grid-cols-1 gap-10 sm:grid-cols-3">
            {% for speaker in featured_speakers %}
                <div class="flex flex-col space-y-4">
                    <h3 class="text-3xl uppercase text-white">{{ speaker.name }}</h3>
                    <p class="text-white">{{ speaker.description }}</p>
                    {% if speaker.image %}
                        <img class="order-first" src="/images/speakers/{{ speaker.image }}" alt="{{ speaker.name }}">
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</section>
